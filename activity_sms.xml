<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Title -->
    <TextView
        android:id="@+id/textSMSTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_title"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!--Description -->
    <TextView
        android:id="@+id/textSMSDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sms_description"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textSMSTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp" />

    <!-- Enabling Notifications Button -->
    <Button
        android:id="@+id/buttonEnableSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_sms_button"
        app:layout_constraintTop_toBottomOf="@id/textSMSDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <!--A response placeholder -->
    <TextView
        android:id="@+id/textSMSResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_response_placeholder"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/buttonEnableSMS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
